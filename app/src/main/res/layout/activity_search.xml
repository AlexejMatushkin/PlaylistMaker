<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search_back_button"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_gravity="center_vertical"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@drawable/ic_arrow_back_24"
            app:iconGravity="textStart"
            app:iconTint="?attr/colorOnSurface"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/padding_text_vertical"
            android:paddingStart="@dimen/padding_text_start"
            android:paddingTop="@dimen/padding_text_top"
            android:text="@string/search_title"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            android:fontFamily="@font/ys_display_medium"/>
    </LinearLayout>

    <FrameLayout
        style="@style/SearchContainerStyle">

        <EditText
            android:id="@+id/search_edit_text"
            android:autofillHints=""
            android:hint="@string/search_hint"
            android:drawableStart="@drawable/ic_search_24"
            android:textColor="@color/black_main"
            style="@style/SearchEditTextStyle"
            tools:ignore="TextFields" />

        <ImageButton
            android:id="@+id/search_clear_button"
            android:src="@drawable/ic_clear_24"
            android:visibility="gone"
            style="@style/SearchClearButtonStyle"
            tools:ignore="ContentDescription" />

    </FrameLayout>

</LinearLayout>